# Variables
export BREW=`brew --prefix`
export TERM=xterm-256color
export EDITOR=$BREW/bin/mvim
export GIT_EDITOR=$BREW/bin/mvim
export UNISONLOCALHOSTNAME=dc10
export OS=Darwin
export MANPATH=$MANPATH:$BREW/man
export ROOTSYS=$(brew --prefix root)
export ANDROID_SDK_ROOT=/usr/local/Cellar/android-sdk/r20.0.3
# Path games
cdpath+=(~/Arxiu/Fisica/LHCb/Projectes)
NEW_LD_LIBRARY_PATH=$ROOTSYS/lib/root:$BREW/lib:/usr/lib
if [ -z "${LD_LIBRARY_PATH}" ]; then
  LD_LIBRARY_PATH=$NEW_LD_LIBRARY_PATH; export LD_LIBRARY_PATH
else
  LD_LIBRARY_PATH+=$LD_LIBRARY_PATH; export LD_LIBRARY_PATH
fi
# PATH
NEW_PATH=$BREW/bin:$BREW/sbin:$ROOTSYS/bin:/usr/local/share/python
if [ -z "${PATH}" ]; then
  PATH=$NEW_PATH; export PATH
else
  PATH=$NEW_PATH:$PATH; export PATH
fi
# PYTHONPATH
NEW_PYTHONPATH=$BREW/lib:$ROOTSYS/lib/root:/Users/albert/Arxiu/Fisica/LHCb/Projectes 
if [ -z "${PYTHONPATH}" ]; then
  PYTHONPATH=$NEW_PYTHONPATH; export PYTHONPATH
else
  PYTHONPATH+=$NEW_PYTHONPATH; export PYTHONPATH
fi

# EOF
